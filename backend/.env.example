# Backend Environment Variables
PORT=8000
NODE_ENV=production
DATABASE_URL=file:/app/prisma/dev.db

# Comma-separated list of allowed frontend origins (CORS + CSRF + better-auth trusted origins)
# For reverse proxy setups (e.g., Caddy/nginx), set to your public domain
FRONTEND_URL=http://localhost:6767

# Base URL for better-auth (set to your public URL when behind a reverse proxy)
# BETTER_AUTH_BASE_URL=https://yourdomain.com

# Proxy trust configuration (default: true)
# Set to 'true' for most reverse proxy setups (Caddy, nginx, Traefik)
# Set to a number (e.g., 1) for single-layer proxies, or 'false' to disable
# TRUST_PROXY=true

# CSRF secret key (auto-generated if not set)
# Required for horizontal scaling (all instances must share the same secret)
# CSRF_SECRET=your-secret-key-here

# CSRF rate limit: max token requests per minute per IP (default: 60)
# CSRF_MAX_REQUESTS=60

# Enable verbose CSRF debug logging (default: false)
# DEBUG_CSRF=false

# API rate limit: max requests per 15-minute window per IP (default: 1000)
# RATE_LIMIT_MAX_REQUESTS=1000

# Drawings list cache TTL in milliseconds (default: 2000)
# DRAWINGS_CACHE_TTL_MS=2000